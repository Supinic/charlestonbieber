{
  "compilerOptions": {
    "outDir": "build",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "target": "ES2015",
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": [
    ".yarn",
    ".vscode",
    "build",
  ],
}
